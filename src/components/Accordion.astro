---
/**
 * Accordion Component
 *
 * Collapsible content container with accessible markup
 *
 * Props:
 * @param title - Accordion header text
 * @param icon - Optional emoji/icon
 * @param id - Unique ID for accordion (required for accessibility)
 * @param defaultOpen - Whether accordion starts expanded (default: false)
 */

interface Props {
  title: string;
  icon?: string;
  id: string;
  defaultOpen?: boolean;
}

const { title, icon, id, defaultOpen = false } = Astro.props;
const buttonId = `accordion-button-${id}`;
const contentId = `accordion-content-${id}`;
---

<div class="accordion-item">
  <button
    type="button"
    class="accordion-button"
    id={buttonId}
    aria-expanded={defaultOpen ? 'true' : 'false'}
    aria-controls={contentId}
    data-accordion-button
  >
    <span class="accordion-header">
      {icon && <span class="accordion-icon">{icon}</span>}
      <span class="accordion-title">{title}</span>
    </span>
    <svg
      class="accordion-chevron"
      width="20"
      height="20"
      viewBox="0 0 20 20"
      fill="none"
      xmlns="http://www.w3.org/2000/svg"
      aria-hidden="true"
    >
      <path
        d="M5 7.5L10 12.5L15 7.5"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      />
    </svg>
  </button>

  <div
    class="accordion-content"
    id={contentId}
    role="region"
    aria-labelledby={buttonId}
    hidden={!defaultOpen}
  >
    <div class="accordion-body">
      <slot />
    </div>
  </div>
</div>

<script>
  // Accordion functionality
  document.addEventListener('DOMContentLoaded', () => {
    const buttons = document.querySelectorAll('[data-accordion-button]');

    buttons.forEach((button) => {
      button.addEventListener('click', () => {
        const expanded = button.getAttribute('aria-expanded') === 'true';
        const contentId = button.getAttribute('aria-controls');
        const content = document.getElementById(contentId!);

        if (!content) return;

        // Toggle state
        button.setAttribute('aria-expanded', String(!expanded));
        content.hidden = expanded;
      });
    });
  });
</script>

<style>
  .accordion-item {
    background-color: var(--color-bg-white);
    border: 1px solid var(--color-border-light);
    border-radius: var(--border-radius-lg);
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .accordion-item:hover {
    border-color: var(--color-secondary);
    box-shadow: var(--shadow-sm);
  }

  .accordion-button {
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--space-lg) var(--space-xl);
    background: transparent;
    border: none;
    cursor: pointer;
    font-family: var(--font-family-base);
    text-align: left;
    transition: background-color var(--transition-base);
  }

  .accordion-button:hover {
    background-color: var(--color-bg-light);
  }

  .accordion-button:focus-visible {
    outline: 2px solid var(--color-secondary);
    outline-offset: -2px;
  }

  .accordion-header {
    display: flex;
    align-items: center;
    gap: var(--space-md);
  }

  .accordion-icon {
    font-size: var(--font-size-2xl);
    line-height: 1;
  }

  .accordion-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
  }

  .accordion-chevron {
    flex-shrink: 0;
    color: var(--color-secondary);
    transition: transform var(--transition-base);
  }

  .accordion-button[aria-expanded='true'] .accordion-chevron {
    transform: rotate(180deg);
  }

  .accordion-content {
    overflow: hidden;
    transition: all var(--transition-base);
  }

  .accordion-content[hidden] {
    display: none;
  }

  .accordion-body {
    padding: 0 var(--space-xl) var(--space-xl) var(--space-xl);
    color: var(--color-text-body);
    line-height: var(--line-height-relaxed);
  }

  /* Content styling */
  .accordion-body :global(p) {
    margin-bottom: var(--space-md);
  }

  .accordion-body :global(p:last-child) {
    margin-bottom: 0;
  }

  .accordion-body :global(ul),
  .accordion-body :global(ol) {
    margin: var(--space-md) 0;
    padding-left: var(--space-xl);
  }

  .accordion-body :global(li) {
    margin-bottom: var(--space-sm);
  }

  .accordion-body :global(a) {
    color: var(--color-secondary);
    text-decoration: underline;
    transition: color var(--transition-base);
  }

  .accordion-body :global(a:hover) {
    color: var(--color-secondary-dark);
  }

  .accordion-body :global(strong) {
    font-weight: var(--font-weight-bold);
    color: var(--color-text-dark);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .accordion-button {
      padding: var(--space-md) var(--space-lg);
    }

    .accordion-body {
      padding: 0 var(--space-lg) var(--space-lg) var(--space-lg);
    }

    .accordion-title {
      font-size: var(--font-size-base);
    }

    .accordion-icon {
      font-size: var(--font-size-xl);
    }
  }
</style>
