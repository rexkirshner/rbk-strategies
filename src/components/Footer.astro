---
/**
 * Footer Component
 *
 * Site footer with copyright and contact information
 */

import Container from './Container.astro';

const currentYear = new Date().getFullYear();
---

<footer class="footer">
  <Container>
    <div class="footer-content">
      <!-- Footer Branding -->
      <div class="footer-brand">
        <p class="footer-logo">RBK Strategies</p>
        <p class="footer-tagline">
          Strategic consulting in operations, finance, and technology
        </p>
      </div>

      <!-- Footer Links/Contact -->
      <div class="footer-links">
        <a href="mailto:contact@rbkstrategies.com" class="footer-link">
          contact@rbkstrategies.com
        </a>
      </div>
    </div>

    <!-- Footer Bottom -->
    <div class="footer-bottom">
      <p class="copyright">
        &copy; 2025 RBK Strategies. RBK Strategies is a business name of RBK Services LLC, a California limited liability company.
      </p>

      <!-- Location & Social -->
      <div class="footer-location">
        <span>Los Angeles, CA</span>
        <a href="https://www.linkedin.com/company/rbk-strategies/" target="_blank" rel="noopener" aria-label="LinkedIn" class="linkedin-link">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
            <path d="M19 3a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h14m-.5 15.5v-5.3a3.26 3.26 0 0 0-3.26-3.26c-.85 0-1.84.52-2.32 1.3v-1.11h-2.79v8.37h2.79v-4.93c0-.77.62-1.4 1.39-1.4a1.4 1.4 0 0 1 1.4 1.4v4.93h2.79M6.88 8.56a1.68 1.68 0 0 0 1.68-1.68c0-.93-.75-1.69-1.68-1.69a1.69 1.69 0 0 0-1.69 1.69c0 .93.76 1.68 1.69 1.68m1.39 9.94v-8.37H5.5v8.37h2.77z"/>
          </svg>
        </a>
      </div>
    </div>
  </Container>
</footer>

<style>
  .footer {
    background-color: var(--color-primary);
    color: var(--color-white);
    padding-top: var(--space-2xl);
    padding-bottom: var(--space-lg);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: start;
    gap: var(--space-xl);
    margin-bottom: var(--space-lg);
    padding-bottom: var(--space-lg);
    border-bottom: 1px solid var(--color-white-20);
  }

  .footer-brand {
    flex: 1;
  }

  .footer-logo {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    margin-bottom: var(--space-xs);
    color: var(--color-white);
  }

  .footer-tagline {
    font-size: var(--font-size-sm);
    color: var(--color-white-80);
    max-width: 400px;
  }

  .footer-links {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-link {
    font-size: var(--font-size-base);
    color: var(--color-white-90);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .footer-link:hover {
    color: var(--color-accent-light);
    text-decoration: underline;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: var(--space-md);
  }

  .copyright {
    font-size: var(--font-size-sm);
    color: var(--color-white-70);
    line-height: var(--line-height-normal);
  }

  .footer-location {
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    font-size: var(--font-size-sm);
    color: var(--color-white-70);
  }

  .linkedin-link {
    display: flex;
    align-items: center;
    color: var(--color-white-70);
    transition: color var(--transition-fast);
  }

  .linkedin-link:hover {
    color: var(--color-white);
  }

  /* Responsive */
  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-lg);
    }

    .footer-bottom {
      flex-direction: column;
      align-items: center;
      text-align: center;
      gap: var(--space-sm);
    }

    .copyright {
      font-size: var(--font-size-xs);
    }
  }
</style>
