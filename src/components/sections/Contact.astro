---
/**
 * Contact Section
 *
 * Multiple contact methods: email, form, and calendar booking
 */

import Container from '../Container.astro';
import Section from '../Section.astro';
import Button from '../Button.astro';
import ContactForm from '../ContactForm.astro';
---

<Section id="contact" spacing="xl" background="light">
  <Container size="lg">
    <div class="section-header">
      <h2 class="section-title">Let's Work Together</h2>
      <p class="section-subtitle">
        Ready to optimize your operations, strengthen your finances, or transform your technology?
        Get in touch to discuss how we can help your business grow.
      </p>
    </div>

    <div class="contact-methods">
      <!-- Email Contact -->
      <div class="contact-method">
        <div class="method-icon">üìß</div>
        <h3 class="method-title">Email</h3>
        <p class="method-description">Send us a message and we'll respond within 24 hours.</p>
        <Button href="mailto:contact@rbkstrategies.com" variant="secondary" size="md">
          Send Email
        </Button>
      </div>

      <!-- Contact Form -->
      <div class="contact-method">
        <div class="method-icon">üìù</div>
        <h3 class="method-title">Contact Form</h3>
        <p class="method-description">Fill out a form with details about your needs.</p>
        <Button href="#contact-form-section" variant="secondary" size="md"> Open Form </Button>
      </div>

      <!-- Calendar Booking -->
      <div class="contact-method">
        <div class="method-icon">üìÖ</div>
        <h3 class="method-title">Schedule a Call</h3>
        <p class="method-description">Book a 30-minute consultation call directly.</p>
        <Button href="https://calendly.com/rexkirshner/30min" variant="secondary" size="md">
          Schedule Now
        </Button>
      </div>
    </div>

    <!-- Contact Form Section -->
    <div id="contact-form-section" class="form-section">
      <h3 class="form-section-title">Send Us a Message</h3>
      <p class="form-section-subtitle">
        Fill out the form below and we'll get back to you within 24 hours.
      </p>
      <ContactForm />
    </div>
  </Container>
</Section>

<style>
  .contact-methods {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: var(--space-2xl);
    margin-bottom: var(--space-3xl);
  }

  .contact-method {
    background-color: var(--color-bg-white);
    border: 1px solid var(--color-border-light);
    border-radius: var(--border-radius-lg);
    padding: var(--space-2xl);
    text-align: center;
    transition: all var(--transition-base);
  }

  .contact-method:hover {
    border-color: var(--color-secondary);
    transform: translateY(-4px);
    box-shadow: var(--shadow-lg);
  }

  .method-icon {
    font-size: var(--font-size-4xl);
    margin-bottom: var(--space-lg);
  }

  .method-title {
    font-size: var(--font-size-xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    margin-bottom: var(--space-md);
  }

  .method-description {
    font-size: var(--font-size-base);
    color: var(--color-text-light);
    margin-bottom: var(--space-lg);
    line-height: var(--line-height-relaxed);
  }

  .method-note {
    font-size: var(--font-size-sm);
    color: var(--color-text-muted);
    margin-top: var(--space-md);
    font-style: italic;
  }

  .form-section {
    margin-top: var(--space-5xl);
    padding-top: var(--space-4xl);
    border-top: 2px solid var(--color-border-light);
  }

  .form-section-title {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-primary);
    text-align: center;
    margin-bottom: var(--space-md);
  }

  .form-section-subtitle {
    font-size: var(--font-size-base);
    color: var(--color-text-light);
    text-align: center;
    margin-bottom: var(--space-3xl);
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .contact-methods {
      grid-template-columns: 1fr;
      gap: var(--space-xl);
    }
  }
</style>
