---
/**
 * Hero Section
 *
 * Main landing section with headline, subheadline, and CTA
 */

import Container from '../Container.astro';
import Section from '../Section.astro';
import Button from '../Button.astro';
---

<Section id="hero" spacing="xl" background="primary" class="hero-section">
  <!-- Circuit board pattern - organic, non-repeating -->
  <svg class="circuit-pattern" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" viewBox="0 0 1200 800" preserveAspectRatio="xMidYMid slice">
    <!-- Horizontal traces -->
    <line x1="0" y1="120" x2="280" y2="120" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="350" y1="120" x2="600" y2="120" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="0" y1="280" x2="180" y2="280" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="250" y1="280" x2="450" y2="280" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="520" y1="280" x2="800" y2="280" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="200" y1="450" x2="500" y2="450" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="580" y1="450" x2="900" y2="450" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="400" y1="620" x2="700" y2="620" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="780" y1="620" x2="1200" y2="620" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>

    <!-- Vertical traces -->
    <line x1="180" y1="0" x2="180" y2="200" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="180" y1="260" x2="180" y2="450" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="350" y1="50" x2="350" y2="280" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="500" y1="200" x2="500" y2="500" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="700" y1="100" x2="700" y2="350" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="700" y1="420" x2="700" y2="700" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
    <line x1="900" y1="250" x2="900" y2="550" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>
    <line x1="1050" y1="0" x2="1050" y2="300" stroke="rgba(255,255,255,0.12)" stroke-width="1.5"/>

    <!-- Diagonal connections -->
    <line x1="180" y1="280" x2="280" y2="380" stroke="rgba(255,255,255,0.1)" stroke-width="1.5"/>
    <line x1="500" y1="450" x2="620" y2="570" stroke="rgba(255,255,255,0.1)" stroke-width="1.5"/>
    <line x1="700" y1="280" x2="850" y2="430" stroke="rgba(255,255,255,0.1)" stroke-width="1.5"/>

    <!-- Connection nodes with pulsing -->
    <circle cx="180" cy="120" r="4" class="node-pulse-1"/>
    <circle cx="350" cy="120" r="5" class="node-pulse-2"/>
    <circle cx="180" cy="280" r="4" fill="rgba(255,255,255,0.2)"/>
    <circle cx="350" cy="280" r="4" class="node-pulse-3"/>
    <circle cx="500" cy="280" r="5" fill="rgba(255,255,255,0.2)"/>
    <circle cx="700" cy="280" r="4" class="node-pulse-1"/>
    <circle cx="500" cy="450" r="5" class="node-pulse-2"/>
    <circle cx="700" cy="450" r="4" fill="rgba(255,255,255,0.2)"/>
    <circle cx="900" cy="450" r="4" class="node-pulse-3"/>
    <circle cx="700" cy="620" r="5" class="node-pulse-1"/>

    <!-- Chip rectangles -->
    <rect x="270" y="110" width="25" height="25" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1.5" rx="3"/>
    <rect x="590" y="110" width="30" height="18" fill="none" stroke="rgba(255,255,255,0.12)" stroke-width="1.5" rx="3"/>
    <rect x="440" y="270" width="20" height="28" fill="none" stroke="rgba(255,255,255,0.15)" stroke-width="1.5" rx="3"/>
    <rect x="870" y="440" width="35" height="22" fill="none" stroke="rgba(255,255,255,0.12)" stroke-width="1.5" rx="3"/>
    <rect x="240" y="370" width="22" height="22" fill="none" stroke="rgba(255,255,255,0.12)" stroke-width="1.5" rx="3"/>

    <!-- Small detail dots -->
    <circle cx="280" cy="120" r="2" fill="rgba(255,255,255,0.15)"/>
    <circle cx="250" cy="280" r="2" fill="rgba(255,255,255,0.15)"/>
    <circle cx="580" cy="450" r="2" fill="rgba(255,255,255,0.15)"/>
    <circle cx="780" cy="620" r="2" fill="rgba(255,255,255,0.15)"/>
  </svg>

  <Container>
    <div class="hero-content">
      <h1 class="hero-headline">Strategic Consulting for Growing Businesses</h1>
      <p class="hero-subheadline">
        Expert guidance in operations, finance, and technology to help your business scale
        efficiently.
      </p>
      <p class="hero-attribution">
        with <strong>Rex Kirshner</strong>
      </p>
      <div class="hero-cta">
        <Button href="#contact" variant="secondary" size="lg">Let's Talk</Button>
        <Button href="#services" variant="outline" size="lg">View Services</Button>
      </div>
    </div>
  </Container>
</Section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: linear-gradient(135deg, var(--color-primary) 0%, var(--color-primary-light) 50%, var(--color-secondary-light) 100%);
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(var(--color-secondary-light-rgb), 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(var(--color-accent-rgb), 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Circuit board pattern */
  .circuit-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    opacity: 0.5;
  }

  /* Pulsing animations for connection nodes */
  @keyframes nodePulse {
    0%, 100% {
      opacity: 0.2;
      fill: rgba(255, 255, 255, 0.2);
    }
    50% {
      opacity: 1;
      fill: rgba(255, 255, 255, 0.5);
    }
  }

  .circuit-pattern :global(.node-pulse-1) {
    animation: nodePulse 2.5s ease-in-out infinite;
    animation-delay: 0s;
  }

  .circuit-pattern :global(.node-pulse-2) {
    animation: nodePulse 2.5s ease-in-out infinite;
    animation-delay: 0.8s;
  }

  .circuit-pattern :global(.node-pulse-3) {
    animation: nodePulse 2.5s ease-in-out infinite;
    animation-delay: 1.6s;
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero-headline {
    font-size: clamp(36px, 6vw, 58px);
    font-weight: 800;
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    line-height: 1.15;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3), 0 4px 40px rgba(var(--color-secondary-light-rgb), 0.2);
  }

  .hero-subheadline {
    font-size: var(--font-size-lg);
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.95;
    margin-bottom: var(--space-lg);
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.15);
  }

  .hero-attribution {
    font-size: var(--font-size-base);
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.85;
    margin-bottom: var(--space-2xl);
    text-shadow: 0 1px 8px rgba(0, 0, 0, 0.12);
  }

  .hero-attribution strong {
    font-weight: 600;
  }

  .hero-cta {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 10;
  }

  .hero-cta :global(.btn) {
    min-width: 180px;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 80vh;
    }

    .hero-headline {
      font-size: var(--font-size-2xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-md);
    }

    .hero-attribution {
      font-size: var(--font-size-sm);
    }

    .hero-cta {
      flex-direction: column;
      gap: var(--space-md);
    }

    .hero-cta :global(.btn) {
      width: 100%;
      max-width: 280px;
      font-size: var(--font-size-base);
      padding: var(--space-md) var(--space-xl);
    }
  }

  @media (max-width: 480px) {
    .hero-headline {
      font-size: var(--font-size-xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-sm);
    }

    .hero-attribution {
      font-size: var(--font-size-xs);
    }
  }
</style>
