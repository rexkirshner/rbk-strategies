---
/**
 * Hero Section
 *
 * Main landing section with headline, subheadline, and CTA
 */

import Container from '../Container.astro';
import Section from '../Section.astro';
import Button from '../Button.astro';
---

<Section id="hero" spacing="xl" background="primary" class="hero-section">
  <Container>
    <div class="hero-content">
      <h1 class="hero-headline">Strategic Consulting for Growing Businesses</h1>
      <p class="hero-subheadline">
        Expert guidance in operations, finance, and technology to help your business scale
        efficiently.
      </p>
      <div class="hero-cta">
        <Button href="#contact" variant="secondary" size="lg">Let's Talk</Button>
        <Button href="#services" variant="outline" size="lg">View Services</Button>
      </div>
    </div>
  </Container>
</Section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: linear-gradient(135deg, #1E3A5F 0%, #2A4A75 50%, #2D7DD2 100%);
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(45, 125, 210, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(244, 162, 97, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      linear-gradient(45deg, rgba(255,255,255,0.02) 25%, transparent 25%),
      linear-gradient(-45deg, rgba(255,255,255,0.02) 25%, transparent 25%),
      linear-gradient(45deg, transparent 75%, rgba(255,255,255,0.02) 75%),
      linear-gradient(-45deg, transparent 75%, rgba(255,255,255,0.02) 75%);
    background-size: 60px 60px;
    background-position: 0 0, 0 30px, 30px -30px, -30px 0px;
    opacity: 0.3;
    pointer-events: none;
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
  }

  .hero-headline {
    font-size: clamp(48px, 10vw, 100px);
    font-weight: 900;
    background: linear-gradient(135deg, #FFFFFF 0%, #E0F2FE 50%, #BFDBFE 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--space-lg);
    line-height: 1.05;
    letter-spacing: -0.03em;
    text-shadow: none;
    filter: drop-shadow(0 4px 20px rgba(0, 0, 0, 0.3));
  }

  .hero-subheadline {
    font-size: var(--font-size-xl);
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.95;
    margin-bottom: var(--space-3xl);
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.15);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 10;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 80vh;
    }

    .hero-headline {
      font-size: var(--font-size-3xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-lg);
    }

    .hero-cta {
      flex-direction: column;
      gap: var(--space-md);
    }
  }

  @media (max-width: 480px) {
    .hero-headline {
      font-size: var(--font-size-2xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-md);
    }
  }
</style>
