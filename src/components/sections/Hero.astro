---
/**
 * Hero Section
 *
 * Main landing section with headline, subheadline, and CTA
 */

import Container from '../Container.astro';
import Section from '../Section.astro';
import Button from '../Button.astro';
---

<Section id="hero" spacing="xl" background="primary" class="hero-section">
  <!-- Geometric decorations -->
  <div class="hero-shape hero-shape-1"></div>
  <div class="hero-shape hero-shape-2"></div>
  <div class="hero-shape hero-shape-3"></div>
  <div class="hero-shape hero-shape-4"></div>
  <div class="hero-shape hero-shape-5"></div>
  <div class="hero-shape hero-shape-6"></div>

  <Container>
    <div class="hero-content">
      <h1 class="hero-headline">Strategic Consulting for Growing Businesses</h1>
      <p class="hero-subheadline">
        Expert guidance in operations, finance, and technology to help your business scale
        efficiently.
      </p>
      <div class="hero-cta">
        <Button href="#contact" variant="secondary" size="lg">Let's Talk</Button>
        <Button href="#services" variant="outline" size="lg">View Services</Button>
      </div>
    </div>
  </Container>
</Section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: linear-gradient(135deg, #1E3A5F 0%, #2A4A75 50%, #2D7DD2 100%);
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(45, 125, 210, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(244, 162, 97, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero-section::after {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image:
      radial-gradient(circle at center, rgba(255,255,255,0.12) 1.5px, transparent 1.5px);
    background-size: 35px 35px;
    pointer-events: none;
    z-index: 1;
  }

  /* Geometric shapes */
  .hero-shape {
    position: absolute;
    pointer-events: none;
    opacity: 0.12;
    z-index: 1;
  }

  .hero-shape-1 {
    width: 400px;
    height: 400px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    top: 10%;
    right: -100px;
  }

  .hero-shape-2 {
    width: 300px;
    height: 300px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    transform: rotate(45deg);
    bottom: 15%;
    left: -80px;
  }

  .hero-shape-3 {
    width: 200px;
    height: 200px;
    border: 2px solid rgba(255, 255, 255, 0.25);
    border-radius: 50%;
    top: 60%;
    right: 15%;
  }

  .hero-shape-4 {
    width: 150px;
    height: 150px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    transform: rotate(30deg);
    top: 20%;
    left: 10%;
  }

  .hero-shape-5 {
    width: 250px;
    height: 250px;
    border: 2px solid rgba(255, 255, 255, 0.15);
    border-radius: 50%;
    bottom: 20%;
    right: 25%;
  }

  .hero-shape-6 {
    width: 180px;
    height: 180px;
    border: 2px solid rgba(255, 255, 255, 0.2);
    transform: rotate(-15deg);
    top: 40%;
    left: 5%;
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero-headline {
    font-size: clamp(36px, 6vw, 58px);
    font-weight: 800;
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    line-height: 1.15;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3), 0 4px 40px rgba(45, 125, 210, 0.2);
  }

  .hero-subheadline {
    font-size: var(--font-size-xl);
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.95;
    margin-bottom: var(--space-3xl);
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.15);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 10;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 80vh;
    }

    .hero-headline {
      font-size: var(--font-size-3xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-lg);
    }

    .hero-cta {
      flex-direction: column;
      gap: var(--space-md);
    }
  }

  @media (max-width: 480px) {
    .hero-headline {
      font-size: var(--font-size-2xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-md);
    }
  }
</style>
