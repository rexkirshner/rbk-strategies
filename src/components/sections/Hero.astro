---
/**
 * Hero Section
 *
 * Main landing section with headline, subheadline, and CTA
 */

import Container from '../Container.astro';
import Section from '../Section.astro';
import Button from '../Button.astro';
---

<Section id="hero" spacing="xl" background="primary" class="hero-section">
  <!-- Circuit board pattern -->
  <svg class="circuit-pattern" xmlns="http://www.w3.org/2000/svg" width="100%" height="100%">
    <defs>
      <pattern id="circuit" x="0" y="0" width="200" height="200" patternUnits="userSpaceOnUse">
        <!-- Horizontal traces -->
        <line x1="0" y1="50" x2="80" y2="50" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="120" y1="50" x2="200" y2="50" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="0" y1="150" x2="60" y2="150" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="140" y1="150" x2="200" y2="150" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>

        <!-- Vertical traces -->
        <line x1="50" y1="0" x2="50" y2="80" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="50" y1="120" x2="50" y2="200" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="150" y1="0" x2="150" y2="60" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>
        <line x1="150" y1="140" x2="150" y2="200" stroke="rgba(255,255,255,0.15)" stroke-width="2"/>

        <!-- Connection nodes -->
        <circle cx="50" cy="50" r="4" fill="rgba(255,255,255,0.2)"/>
        <circle cx="150" cy="50" r="4" fill="rgba(255,255,255,0.2)"/>
        <circle cx="50" cy="150" r="4" fill="rgba(255,255,255,0.2)"/>
        <circle cx="150" cy="150" r="4" fill="rgba(255,255,255,0.2)"/>

        <!-- Chip rectangles -->
        <rect x="90" y="40" width="20" height="20" fill="none" stroke="rgba(255,255,255,0.12)" stroke-width="2"/>
        <rect x="130" y="140" width="15" height="15" fill="none" stroke="rgba(255,255,255,0.12)" stroke-width="2"/>
      </pattern>
    </defs>
    <rect width="100%" height="100%" fill="url(#circuit)"/>
  </svg>

  <Container>
    <div class="hero-content">
      <h1 class="hero-headline">Strategic Consulting for Growing Businesses</h1>
      <p class="hero-subheadline">
        Expert guidance in operations, finance, and technology to help your business scale
        efficiently.
      </p>
      <div class="hero-cta">
        <Button href="#contact" variant="secondary" size="lg">Let's Talk</Button>
        <Button href="#services" variant="outline" size="lg">View Services</Button>
      </div>
    </div>
  </Container>
</Section>

<style>
  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: linear-gradient(135deg, #1E3A5F 0%, #2A4A75 50%, #2D7DD2 100%);
    overflow: hidden;
  }

  .hero-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background:
      radial-gradient(circle at 20% 50%, rgba(45, 125, 210, 0.15) 0%, transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(244, 162, 97, 0.1) 0%, transparent 50%);
    pointer-events: none;
  }

  /* Circuit board pattern */
  .circuit-pattern {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
    opacity: 0.4;
  }

  .hero-content {
    text-align: center;
    max-width: 900px;
    margin: 0 auto;
    position: relative;
    z-index: 2;
  }

  .hero-headline {
    font-size: clamp(36px, 6vw, 58px);
    font-weight: 800;
    color: var(--color-white);
    margin-bottom: var(--space-lg);
    line-height: 1.15;
    letter-spacing: -0.02em;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3), 0 4px 40px rgba(45, 125, 210, 0.2);
  }

  .hero-subheadline {
    font-size: var(--font-size-xl);
    font-weight: 400;
    color: var(--color-white);
    opacity: 0.95;
    margin-bottom: var(--space-3xl);
    line-height: 1.6;
    max-width: 700px;
    margin-left: auto;
    margin-right: auto;
    text-shadow: 0 1px 10px rgba(0, 0, 0, 0.15);
  }

  .hero-cta {
    display: flex;
    gap: var(--space-lg);
    justify-content: center;
    align-items: center;
    flex-wrap: wrap;
    position: relative;
    z-index: 10;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .hero-section {
      min-height: 80vh;
    }

    .hero-headline {
      font-size: var(--font-size-3xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-lg);
    }

    .hero-cta {
      flex-direction: column;
      gap: var(--space-md);
    }
  }

  @media (max-width: 480px) {
    .hero-headline {
      font-size: var(--font-size-2xl);
    }

    .hero-subheadline {
      font-size: var(--font-size-md);
    }
  }
</style>
