---
/**
 * Base Layout
 *
 * Main page layout with SEO foundations, global styles, and structure
 *
 * Props:
 * @param title - Page title (appended to site name)
 * @param description - Meta description for SEO
 * @param ogImage - Open Graph image URL
 * @param canonical - Canonical URL for this page
 */

interface Props {
  title?: string;
  description?: string;
  ogImage?: string;
  canonical?: string;
}

const {
  title = 'RBK Strategies - Rex Kirshner | Business Operations, Finance & Technology Consulting',
  description = 'Rex Kirshner provides expert consulting services in business operations, finance, and technology. Strategic guidance to help your business scale efficiently.',
  ogImage = '/og-image.jpg',
  canonical,
} = Astro.props;

const siteTitle = 'RBK Strategies';
const fullTitle = title === siteTitle ? title : `${title} | ${siteTitle}`;
const canonicalURL = canonical || new URL(Astro.url.pathname, Astro.site).href;

// Google Analytics
const gaId = import.meta.env.PUBLIC_GA_MEASUREMENT_ID;

// Structured Data (JSON-LD) for SEO
const structuredData = {
  "@context": "https://schema.org",
  "@graph": [
    {
      "@type": "Organization",
      "@id": `${Astro.site}#organization`,
      "name": "RBK Strategies",
      "legalName": "RBK Services LLC",
      "url": Astro.site,
      "logo": {
        "@type": "ImageObject",
        "url": `${Astro.site}og-image.jpg`,
        "width": 1200,
        "height": 630
      },
      "description": "Expert consulting services in business operations, finance, and technology for growing businesses.",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "CA",
        "addressCountry": "US"
      },
      "email": "contact@rbkstrategies.com",
      "founder": {
        "@type": "Person",
        "name": "Rex Kirshner",
        "jobTitle": "Principal Consultant",
        "alumniOf": {
          "@type": "CollegeOrUniversity",
          "name": "Stanford University"
        },
        "url": "https://rexkirshner.com",
        "sameAs": "https://www.linkedin.com/in/rexkirshner/"
      },
      "sameAs": [
        "https://www.linkedin.com/in/rexkirshner/"
      ]
    },
    {
      "@type": "LocalBusiness",
      "@id": `${Astro.site}#localbusiness`,
      "name": "RBK Strategies",
      "image": `${Astro.site}og-image.jpg`,
      "telephone": "+1-XXX-XXX-XXXX",
      "email": "contact@rbkstrategies.com",
      "address": {
        "@type": "PostalAddress",
        "addressRegion": "CA",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "addressCountry": "US"
      },
      "url": Astro.site,
      "priceRange": "$$",
      "openingHoursSpecification": {
        "@type": "OpeningHoursSpecification",
        "dayOfWeek": [
          "Monday",
          "Tuesday",
          "Wednesday",
          "Thursday",
          "Friday"
        ],
        "opens": "09:00",
        "closes": "17:00"
      }
    },
    {
      "@type": "ProfessionalService",
      "@id": `${Astro.site}#service`,
      "name": "Business Consulting Services",
      "provider": {
        "@id": `${Astro.site}#organization`
      },
      "areaServed": {
        "@type": "Country",
        "name": "United States"
      },
      "serviceType": [
        "Business Operations Consulting",
        "Financial Consulting",
        "Technology Consulting",
        "Blockchain Consulting",
        "Strategic Planning"
      ],
      "description": "Expert guidance in operations, finance, and technology to help your business scale efficiently."
    },
    {
      "@type": "WebSite",
      "@id": `${Astro.site}#website`,
      "url": Astro.site,
      "name": "RBK Strategies",
      "description": "Strategic consulting for growing businesses",
      "publisher": {
        "@id": `${Astro.site}#organization`
      },
      "inLanguage": "en-US"
    },
    {
      "@type": "WebPage",
      "@id": canonicalURL,
      "url": canonicalURL,
      "name": fullTitle,
      "isPartOf": {
        "@id": `${Astro.site}#website`
      },
      "about": {
        "@id": `${Astro.site}#organization`
      },
      "description": description,
      "inLanguage": "en-US"
    }
  ]
};
---

<!doctype html>
<html lang="en">
  <head>
    <!-- Meta charset and viewport -->
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>{fullTitle}</title>
    <meta name="title" content={fullTitle} />
    <meta name="description" content={description} />
    <meta name="author" content="Rex Kirshner" />
    <meta name="keywords" content="Rex Kirshner, RBK Strategies, business consulting, operations consulting, financial consulting, technology consulting, blockchain consulting, web3 consulting, Ethereum, DAO consulting, strategic planning, business operations, California business consulting, startup consulting, scale business" />
    <meta name="robots" content="index, follow, max-image-preview:large, max-snippet:-1, max-video-preview:-1" />
    <meta name="googlebot" content="index, follow" />
    <meta name="language" content="English" />
    <meta name="geo.region" content="US-CA" />
    <meta name="geo.placename" content="California" />
    <meta name="geo.position" content="37.7749;-122.4194" />
    <meta name="ICBM" content="37.7749, -122.4194" />

    <!-- Canonical URL -->
    <link rel="canonical" href={canonicalURL} />

    <!-- Identity Verification (rel="me" for personal brand consolidation) -->
    <link rel="me" href="https://rexkirshner.com" />
    <link rel="me" href="https://www.linkedin.com/in/rexkirshner/" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={fullTitle} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:site_name" content={siteTitle} />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={fullTitle} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={ogImage} />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Theme Color (must match --color-primary in variables.css) -->
    <meta name="theme-color" content="#0D1E35" />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- Google Analytics -->
    {
      gaId && (
        <>
          <script
            async
            src={`https://www.googletagmanager.com/gtag/js?id=${gaId}`}
          ></script>
          <script
            is:inline
            define:vars={{ gaId }}
          >
            window.dataLayer = window.dataLayer || [];
            function gtag() {
              dataLayer.push(arguments);
            }
            gtag('js', new Date());
            gtag('config', gaId);
          </script>
        </>
      )
    }

    <!-- JSON-LD Structured Data -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)} />

    <!-- Preconnect and DNS Prefetch to improve performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="dns-prefetch" href="https://www.googletagmanager.com" />
    <link rel="dns-prefetch" href="https://www.google-analytics.com" />

    <!-- Google Fonts - Inter -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800&display=swap"
      rel="stylesheet"
    />

    <!-- Global Styles -->
    <style is:global>
      @import '../styles/global.css';
    </style>
  </head>
  <body>
    <!-- Skip to main content for accessibility -->
    <a href="#main-content" class="skip-link">Skip to main content</a>

    <slot />
  </body>
</html>
